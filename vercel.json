{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "SECRET_KEY": "your-production-secret-key",
    "MONGODB_URI": "mongodb+srv://username:password@cluster.mongodb.net/aula1_db?retryWrites=true&w=majority"
  }
}